<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>
        <variable
                name="itemList"
                type="com.example.testapplication.database.entity.Item" />
    </data>


    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/tvLogID"
                android:layout_margin="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@{String.valueOf(itemList.id)}"/>
        <TextView
                android:id="@+id/tvOrderId"
                android:layout_margin="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@{itemList.orderId}"/>
        <TextView
                android:id="@+id/tvItemID"
                android:layout_margin="5dp"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:text="@{itemList.itemId}"/>
        <TextView
                android:id="@+id/tvOldPrice"
                android:layout_margin="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@{itemList.certainOldPrice}"/>
        <TextView
                android:id="@+id/tvNewPrice"
                android:layout_margin="5dp"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="@{itemList.certainNewPrice}"/>
        <TextView
                android:id="@+id/tvDate"
                android:layout_margin="5dp"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:text="@{itemList.correctDate}"/>
    </LinearLayout>
</layout>